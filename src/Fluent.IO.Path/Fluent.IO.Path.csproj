<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>A fluent wrapper around System.IO</Description>
    <TargetFramework>netstandard2.1</TargetFramework>
    <RootNamespace>Fluent.IO</RootNamespace>
    <Nullable>enable</Nullable>
    <LangVersion>9.0</LangVersion>
    <Version>3.0.0</Version>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>favicon.png</PackageIcon>
    <PackageProjectUrl>https://github.com/bleroy/FluentPath</PackageProjectUrl>
    <RepositoryUrl>https://github.com/bleroy/FluentPath</RepositoryUrl>
    <PackageTags>IO, path, file system, file, directory, fluent</PackageTags>
    <Company>Decent Consulting</Company>
    <Copyright>Copyright Â© 2010-2019 Bertrand Le Roy</Copyright>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\doc\media\favicon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
