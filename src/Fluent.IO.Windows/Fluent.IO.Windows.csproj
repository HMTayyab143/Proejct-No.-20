<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Description>Windows-specific extensions to Fluent.IO</Description>
    <Version>2.0.0</Version>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Authors>Bertrand Le Roy</Authors>
    <Company>Decent Consulting</Company>
    <Product>FluentPath</Product>
    <Copyright>Copyright Â© 2010-2019 Bertrand Le Roy</Copyright>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageIcon>favicon.png</PackageIcon>
    <PackageIconUrl />
    <RepositoryUrl>https://github.com/bleroy/FluentPath</RepositoryUrl>
    <PackageProjectUrl>https://github.com/bleroy/FluentPath</PackageProjectUrl>
    <PackageTags>FluentPath, Windows, Fluent, IO</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.IO.FileSystem.AccessControl" Version="4.7.0-preview2.19523.17" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\FluentPath\FluentPath.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\doc\media\favicon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
